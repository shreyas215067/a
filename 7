#include <stdio.h>
int main() {
    float sum = 0;
    int wt[20], val[20],c,n,i,j,max;
printf("Enter number of items: ");
    scanf("%d", &n);
printf("Enter the weights of each item: ");
    for (i = 0; i < n; i++)
 {
        scanf("%d", &wt[i]);
    }
    printf("Enter the values of each item: ");
    for (i = 0; i < n; i++) {
        scanf("%d", &val[i]);
    }

    printf("Enter capacity of knapsack: ");
    scanf("%d", &c);
    while (c > 0)
 {
        max = 0;
        for (i = 0; i < n; i++)
 {
            if ((float)val[i] / wt[i] > max && wt[i] > 0)
 {
                max = (float)val[i] / wt[i];
                j = i;
            }
        }

        if (wt[j] > c) 
{
            printf("Quantity of item number %d added is %d\n", j + 1, c);
            sum += c* max;
            break;
  } 
else
 {
printf("Quantity of item number %d added is %d\n", j + 1, wt[j]);
c -= wt[j];
sum += val[j];
val[j] = 0;
 }}
printf("The total profit is %.2f\n", sum);
    return 0;
}
